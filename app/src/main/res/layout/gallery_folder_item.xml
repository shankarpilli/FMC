<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_220dp">

    <ImageView
        android:id="@+id/iv_gallery_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_165dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/folder_icon" />

    <TextView
        android:id="@+id/txt_folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/themeColor_fifty_percent"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="@dimen/_5dp"
        android:paddingTop="@dimen/_5dp"
        android:text="@string/folder_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sp" />

</RelativeLayout>
