<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/home_post_your_topic_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_post_your_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5dp"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_5dp"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginTop="@dimen/_5dp"
        android:text="@string/post_your_topic"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_marginTop="@dimen/_5dp"
        android:background="@color/dark_gray_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_10dp">

        <ImageView
            android:id="@+id/iv_user_profile_pic"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:src="@drawable/avatar_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_what_is_on_u_mind"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100dp"
                android:background="@android:color/transparent"
                android:hint="@string/what_is_in_your_mind"
                android:inputType="text|textNoSuggestions|textMultiLine"
                android:paddingLeft="@dimen/_5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_doc"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:src="@drawable/home_post_doc" />

                <ImageView
                    android:id="@+id/img_pdf"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/home_post_pdf" />

                <ImageView
                    android:id="@+id/img_post"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:src="@drawable/home_post_image" />

                <LinearLayout
                    android:id="@+id/ll_post"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:background="@drawable/home_post_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2dp">

                    <ImageView
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="@dimen/_25dp"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:src="@drawable/home_post_forward" />

                    <TextView
                        android:id="@+id/tv_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:text="@string/post"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_file_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/_5dp"
        android:paddingRight="@dimen/_5dp">

        <TextView
            android:id="@+id/txt_path"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_marginRight="@dimen/_5dp"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/post_your_topic"
            android:textColor="@color/gray"
            android:textSize="@dimen/_18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_close"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/delete_icon"
            android:textColor="@color/gray"
            android:textSize="@dimen/_30sp"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>
