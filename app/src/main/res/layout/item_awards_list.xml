<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80dp"
        android:layout_margin="@dimen/_5dp"
        android:background="@drawable/drawable_login_layout"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <ImageView
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10dp"
                android:src="@drawable/awardrs_detail_avatar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.75"
            android:layout_marginLeft="@dimen/_5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:text="Name"
                android:textColor="@color/themeColor"
                android:textSize="@dimen/_20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:text="Category Name"
                android:textColor="@color/themeColor"
                android:textSize="@dimen/_20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_view_details"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/_5dp"
            android:src="@drawable/detail_view_icon" />

        <LinearLayout
            android:id="@+id/ll_detail_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/themeColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:textColor="@color/themeColor"
                android:textSize="@dimen/_16sp"
                android:text="@string/no_internet_msg"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>