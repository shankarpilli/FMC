<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--android:background="@drawable/splash_screen"-->


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:padding="@dimen/_10dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center"
            android:paddingBottom="@dimen/_10dp"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp"
            android:paddingTop="@dimen/_10dp"
            android:text="@string/txt_contact_us"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginStart="@dimen/_30dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_5dp">

            <ImageView
                android:id="@+id/iv_address"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"
                android:src="@drawable/contact_us_location" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_15dp"
                android:text="@string/contact_address"
                android:textColor="@color/gray"
                android:textSize="@dimen/_18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginStart="@dimen/_30dp"
            android:padding="@dimen/_5dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_5dp">

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"
                android:src="@drawable/mobile_icon" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_15dp"
                android:layout_gravity="center_vertical"
                android:text="@string/phone_number"
                android:textColor="@color/gray"
                android:textSize="@dimen/_18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginStart="@dimen/_30dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_5dp">

            <ImageView
                android:id="@+id/iv_mail"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"
                android:src="@drawable/mail_icon" />

            <TextView
                android:id="@+id/tv_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_15dp"
                android:layout_gravity="center_vertical"
                android:text="@string/fmc_mail_id"
                android:textColor="@color/gray"
                android:textSize="@dimen/_18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginStart="@dimen/_30dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_5dp">

            <ImageView
                android:id="@+id/iv_site"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"
                android:src="@drawable/contact_us_web" />

            <TextView
                android:id="@+id/tv_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_15dp"
                android:text="@string/site"
                android:layout_gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="@dimen/_18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_follow_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_15dp"
            android:gravity="center"
            android:paddingBottom="@dimen/_10dp"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp"
            android:text="@string/follow_us"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/iv_fb"
                android:layout_width="@dimen/_0dp"
                android:layout_height="@dimen/_40dp"
                android:layout_weight="1"
                android:src="@drawable/contact_us_fb" />
            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="@dimen/_0dp"
                android:layout_height="@dimen/_40dp"
                android:layout_weight="1"
                android:src="@drawable/contact_us_twittwe" />
            <ImageView
                android:id="@+id/iv_google"
                android:layout_width="@dimen/_0dp"
                android:layout_height="@dimen/_40dp"
                android:layout_weight="1"
                android:src="@drawable/contact_us_g_plus" />
            <!--  <ImageView
                  android:id="@+id/iv_you_tube"
                  android:layout_width="@dimen/_0dp"
                  android:layout_height="@dimen/_30dp"
                  android:layout_weight="1"
                  android:src="@drawable/avatar" />-->
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_share"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:src="@drawable/share"
            />
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_18sp"
            android:paddingLeft="@dimen/_5dp"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@+id/iv_share"
            android:text="Share app"/>
    </LinearLayout>
</LinearLayout>
