<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/drawable_login_layout"
        android:orientation="vertical"
        android:padding="@dimen/_5dp">

        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp"
            android:text="@string/meeting_on_ghmc_elections"
            android:textColor="@color/themeColor"
            android:textSize="@dimen/_18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:padding="@dimen/_5dp">

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10dp"
                    android:text="@string/location"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <RelativeLayout
                    android:id="@+id/rl_more_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_more_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10dp"
                        android:text="More Details"
                        android:textColor="@color/themeColor"
                        android:textSize="@dimen/_16sp" />

                    <ImageView
                        android:id="@+id/iv_down"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/tv_more_details"
                        android:src="@drawable/down" />

                    <ImageView
                        android:id="@+id/iv_up"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/tv_more_details"
                        android:src="@drawable/up"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:weightSum="1.1">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_events"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_balance_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_3dp"
                        android:text="@string/tv_balance_days"
                        android:textColor="@color/themeColor"
                        android:textSize="12sp" />
                </FrameLayout>


                <LinearLayout
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_accept"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10dp"
                        android:background="@color/themeColor"
                        android:gravity="center"
                        android:text="@string/accept"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sp" />

                    <TextView
                        android:id="@+id/tv_decline"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10dp"
                        android:background="@color/themeColor"
                        android:gravity="center"
                        android:text="@string/decline"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_more_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="@color/themeColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:orientation="horizontal"
                android:padding="@dimen/_5dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_venu_lable"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/venue"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_lable_one"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:text=": "
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_venu"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/location"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:orientation="horizontal"
                android:padding="@dimen/_5dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_organized_by_label"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/organized_by"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_lable_two"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:text=": "
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_organized_by"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/location"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:orientation="horizontal"
                android:padding="@dimen/_5dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_contact_lable"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/contact"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_lable_three"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:text=": "
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/contact"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:orientation="horizontal"
                android:padding="@dimen/_5dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_chief_guest_lable"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/chief_guest"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_lable_four"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:text=": "
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_chief_guest"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/chief_guest"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:orientation="horizontal"
                android:padding="@dimen/_5dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_date_event_label"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/date_of_event"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_lable_five"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:text=": "
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_date_event"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/date_of_event"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10dp"
                android:orientation="horizontal"
                android:padding="@dimen/_5dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_details_lable"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/details"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_lable_six"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="right"
                    android:text=": "
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/this_meeting_for_launching_the_app"
                    android:textColor="@color/themeColor"
                    android:textSize="@dimen/_16sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>