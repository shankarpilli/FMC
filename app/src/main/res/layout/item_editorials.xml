<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:background="@drawable/list_card_background_selector"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_editorials"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp"
            android:layout_margin="@dimen/_5dp"
            android:src="@drawable/folder_icon" />

        <View
            android:layout_width="@dimen/_1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@color/dialogBgColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <!--   <TextView
                   android:id="@+id/txt_your_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_5dp"
                   android:text="@string/first_name"
                   android:visibility="gone"
                   android:textColor="@color/blackColor"
                   android:textSize="@dimen/_18sp" />-->

            <TextView
                android:id="@+id/txt_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@string/company_name"
                android:textColor="@color/gray"
                android:textSize="@dimen/_14sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_3dp"
                android:layout_marginStart="@dimen/_3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_your_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="@string/first_name"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/txt_time_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/_2dp"
                    android:layout_weight="1"
                    android:text="@string/date_time"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_14sp" />

                <!-- <ImageView
                     android:layout_width="@dimen/_50dp"
                     android:layout_height="@dimen/_50dp"
                     android:layout_gravity="right"
                     android:layout_marginLeft="@dimen/_5dp"
                     android:layout_marginTop="@dimen/_5dp"
                     android:src="@drawable/edit_pdf_icon" />-->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>