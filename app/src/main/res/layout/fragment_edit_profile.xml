<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="@dimen/_100dp"
                android:layout_height="@dimen/_100dp">

                <ImageView
                    android:id="@+id/img_user_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="38dp"
                    android:src="@drawable/avatar_image" />

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:background="@drawable/blue_circle_favorite_bg"
                    android:gravity="center"
                    android:text="@string/edit_icon"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_margin="@dimen/_10dp"
                android:background="@color/background_lang"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_first_name"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/login_icon" />

                <EditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/edt_icon_first_name"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/edit_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/background_lang"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_last_name"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/login_icon" />

                <EditText
                    android:id="@+id/edt_last_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/edt_icon_last_name"
                    android:layout_width="@dimen/_50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/edit_icon" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
