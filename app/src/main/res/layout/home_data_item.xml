<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_5dp"
        android:paddingTop="@dimen/_5dp"
        android:background="@drawable/list_card_background_selector"
        android:layout_margin="@dimen/_5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                android:src="@drawable/avatar_image" />

            <LinearLayout
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="@string/your_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sp" />

                    <TextView
                        android:id="@+id/txt_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:text="@string/company_name"
                        android:visibility="gone"
                        android:textColor="@color/light_orange"
                        android:textSize="@dimen/_12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_sub_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sp"
                    android:text="@string/place_time_date" />
                <TextView
                    android:id="@+id/txt_time_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/place_time_date" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_post_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginStart="@dimen/_12dp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_3dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150dp"
            android:scaleType="fitXY"
            android:src="@drawable/star_banner" />
        <TextView
            android:id="@+id/txt_total_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_7dp"
            android:text="146 Comments" />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:background="@color/gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_5dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_comment_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/_16sp"
                    android:padding="@dimen/_2dp"
                    android:layout_centerInParent="true"
                    android:text="@string/comment_icon"/>
                <TextView
                    android:id="@+id/txt_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comment"
                    android:padding="@dimen/_2dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginStart="@dimen/_5dp"
                    android:textSize="@dimen/_16sp"
                    android:layout_toRightOf="@+id/txt_comment_icon"
                    android:layout_toEndOf="@+id/txt_comment_icon"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sp"
                    android:padding="@dimen/_2dp"
                    android:layout_centerInParent="true"
                    android:text="@string/share_icon"/>
                <TextView
                    android:id="@+id/txt_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginStart="@dimen/_5dp"
                    android:textSize="@dimen/_16sp"
                    android:padding="@dimen/_2dp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/txt_share_icon"
                    android:layout_toEndOf="@+id/txt_share_icon"
                    android:gravity="center"/>
            </RelativeLayout>
        </LinearLayout>
